.container{
    display: flex;
    flex-direction: column;
}
.head-image{
    width: 100%;
    height: 460rpx;
}
.author-date{
    margin: 20rpx 0;
}
.avatar{
    width: 64rpx;
    height: 64rpx;
    vertical-align: middle;
    margin-left: 30rpx;
}
.author{
    font-size: 30rpx;
    margin: 0 10rpx;
}
.cont-text{
    margin: 0 10rpx;
}
.title{
    font-size: 32rpx;
    margin: 20rpx 30rpx;
}
.tool{
    margin: 50rpx 30rpx 0;
    border-top: 1px solid #ddd;
    position: relative;
    height: 90rpx;
}
.toop-wrapper{
    position: absolute;
    right:0;
    top: -45rpx;
}
.tool image{
    width:90rpx;
    height: 90rpx;
    margin-left: 20rpx;
}
.detail{
    margin: 0 30rpx;  
    line-height: 1.8;  
}
.audio{
    width: 102rpx;
    max-height: 110rpx;
    position: absolute;
    left: 50%;
    margin-left: -51rpx;
    top: 180rpx;
    opacity: 0.6;

}