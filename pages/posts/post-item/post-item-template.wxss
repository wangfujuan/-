.post-container{
    display: flex;
    flex-direction: column;
    margin-top: 20rpx;
    margin-bottom: 40rpx;
    border-top: 1px solid #ededed;
    border-bottom: 1px solid #ededed;
    padding-bottom: 5px;
    background: #fff;
}
.post-author-date{
    margin: 10rpx 0 20rpx 10rpx;
}
.post-author{
    width: 60rpx;
    height: 60rpx;
    vertical-align: middle;
}
.post-date{
    margin-left: 20rpx;
    vertical-align: middle;
    font-size: 26rpx;
    margin-bottom: 5px;
}
.post-title{
    font-size: 34rpx;
    color: #333;
    font-weight: 600;
    margin-bottom: 10px;
    margin-left: 10px;
}
.post-iamge{
    width: 100%;
    height: 340rpx;
}
.post-content{
    color: #666;
    font-size: 28rpx;
    margin: 0 0 20rpx 20rpx;
    line-height: 40rpx; 
}
.post-like{
    font-size: 13px;
    flex-direction: row;
    line-height: 16px;
    margin-left: 10px;
    margin-bottom: 5px;
}
.post-like image{
    width: 16px;
    height: 16px;
    margin-right: 8px;
    vertical-align: middle;
}
.post-like text{
    vertical-align: middle;
    margin-right: 15px;
}