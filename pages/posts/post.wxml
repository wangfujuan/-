<import src="post-item/post-item-template.wxml" />
<view>
    <swiper catchtap="onSwiperTap" indicator-dots="true" autoplay="true">
        <swiper-item><image src="/images/xiaolong.jpg" data-postId="0"></image></swiper-item>
        <swiper-item><image src="/images/vr.png" data-postId="1"></image></swiper-item>
        <swiper-item><image src="/images/sls.jpg" data-postId="2"></image></swiper-item>
    </swiper>
    <block wx:for="{{postList}}" wx:for-item="item">
        <view catchtap="onPostTap" data-postId="{{item.postId}}">
            <template is="postItem" data="{{...item}}" />
        </view>  
    </block>
    
</view>